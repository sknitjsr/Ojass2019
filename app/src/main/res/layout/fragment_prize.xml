<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_prize"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Prize"
                android:textSize="22dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/prize_layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="7dp">

                        <ImageView
                            android:padding="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/first_place" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="First Prize"
                            android:layout_gravity="center"
                            android:textColor="#FFD700"
                            android:textSize="20sp"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:text="@string/Rs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="20dp"
                                android:text=""
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:textSize="20sp"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="7dp">

                        <ImageView
                            android:padding="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/second_place"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="Second Prize"
                            android:layout_gravity="center"
                            android:textColor="#FFD700"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:text="@string/Rs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/prize2"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="20dp"
                            android:text=""
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="7dp">
                        <ImageView
                            android:padding="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/third_place"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="Third Prize"
                            android:layout_gravity="center"
                            android:textColor="#FFD700"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:text="@string/Rs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/prize3"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="20dp"
                            android:text=""
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textSize="20sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/prize_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Total Prize worth"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textSize="22sp"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:text="@string/Rs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>