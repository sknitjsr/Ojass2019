<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/tab_icon_width"
    android:layout_height="@dimen/tab_icon_height"
    android:layout_marginRight="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardCornerRadius="10dp"
        android:elevation="@dimen/card_tab_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/events_tab_image" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="hello"
            android:layout_gravity="center_horizontal"
            android:id="@+id/events_tab_name" />

        <View
            android:id="@+id/underline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/underline_width"
            android:background="@color/tab_underline_color"
            android:layout_below="@id/events_tab_name"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>